= form_for app do |f|
  - if app.errors.any?
    #error_explanation
      %h2= "#{pluralize(app.errors.count, "error")} prohibited this app from being saved: [T]"
      %ul
        - app.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name

  - if app.new_record?
    .field
      = f.label :key
      = f.text_field :key
  - else
    .field
      %h3= "#{app.key}"

  .actions
    = f.submit 'Save [T]'
