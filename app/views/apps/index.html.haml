%h1 Listing apps [T]

%table
  %tr
    %th Name [T]
    %th Key [T]
    %th
    %th Add Phrase [T]
    %th Translate [T]

  - @apps.each do |app|
    %tr
      %td= link_to app.name, app
      %td= app.key
      %td= link_to 'Edit [T]', edit_app_path(app)
      %td= link_to 'Add Phrase [T]', new_app_phrase_path(app)
      %td= link_to 'Untranslated [T]', app_translations_path(app)

%br

%p= link_to "New app [T]", new_app_path
