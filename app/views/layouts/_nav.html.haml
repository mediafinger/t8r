%nav.navbar.navbar-default
  .container-fluid
    %ul.nav.navbar-nav
      - if @app_count == 0
        %li= link_to I18n.t('pages.apps'),           new_app_path, class: 'navbar-brand'
      - else
        %li= link_to I18n.t('pages.apps'),           apps_path, class: 'navbar-brand'
        - if @app.present? && @app.id
          %li{class: current_page?(app_path(@app)) && 'active'}
            = link_to @app.name, app_path(@app)
          %li{class: current_page?(app_locales_path(@app)) && 'active'}
            = link_to I18n.t('pages.locales'),       app_locales_path(@app)
          %li{class: current_page?(app_phrases_path(@app)) && 'active'}
            = link_to I18n.t('pages.phrases'),      app_phrases_path(@app)
          %li{class: current_page?(app_translations_path(@app)) && 'active'}
            = link_to I18n.t('pages.translations'), app_translations_path(@app)

    %ul.nav.navbar-nav.navbar-right
      %li= link_to I18n.t('pages.home'),   root_path
