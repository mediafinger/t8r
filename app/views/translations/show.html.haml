%p
  %strong App: [T]
  = "#{@app.key} / #{@app.name}"
%p
  %strong Locale: [T]
  = "#{@translation.locale.key} / #{@translation.locale.name}"
%p
  %strong Phrase-key: [T]
  = link_to @translation.phrase.key, app_phrase_path(@app, @translation.phrase)
%p
  %strong Phrase-hint: [T]
  = @translation.phrase.hint
%p
  %strong Phrase: [T]
  = @translation.phrase.value
%p
  %strong Value: [T]
  = @translation.value
%p
  %strong Done: [T]
  - klass = @translation.done ? "translated" : "untranslated"
  %span(class = klass)=  @translation.done


%h4 List of all translations [T]
= form_tag(app_translation_path(@app, @translation), method: :get) do
  = render 'list', translations: @translation.phrase.translations, with_filter: false
