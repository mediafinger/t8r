= form_for [@app, locale], html: {class: 'form-horizontal'} do |f|
  - if locale.errors.any?
    #error_explanation
      %h2= "#{pluralize(locale.errors.count, "error")} prohibited this locale from being saved: [T]"
      %ul
        - locale.errors.full_messages.each do |msg|
          %li= msg

  - if locale.new_record?
    = f.hidden_field :app_id, :value => @app.id

  .form-group
    = f.label :key, class: 'col-sm-2 control-label'
    .col-sm-10
      - if locale.new_record?
        = f.text_field :key, class: 'form-control'
      - else
        %p.form-control-static= "#{locale.key}"

  .form-group
    = f.label :name, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :name, class: 'form-control'


  .form-group
    .col-sm-offset-2.col-sm-10
      .actions
        = f.submit 'Save [T]', class: 'btn btn-primary'
        = link_to 'Cancel [T]', apps_path
